-- GUI MOCKUP / TEMPLATE (AMAN)
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local player = Players.LocalPlayer

local gui = Instance.new("ScreenGui")
gui.Name = "MockMenu"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame
local main = Instance.new("Frame", gui)
main.Size = UDim2.fromScale(0.35, 0.45)
main.Position = UDim2.fromScale(0.325, 0.275)
main.BackgroundColor3 = Color3.fromRGB(25,25,30)
main.BorderSizePixel = 0
main.Visible = true

local corner = Instance.new("UICorner", main)
corner.CornerRadius = UDim.new(0, 12)

-- Header
local header = Instance.new("TextLabel", main)
header.Size = UDim2.new(1, -16, 0, 44)
header.Position = UDim2.new(0, 8, 0, 8)
header.BackgroundTransparency = 1
header.Text = "MOCK MENU"
header.TextColor3 = Color3.fromRGB(235,235,235)
header.Font = Enum.Font.GothamBold
header.TextSize = 18
header.TextXAlignment = Left

-- Tabs
local tabs = Instance.new("Frame", main)
tabs.Size = UDim2.new(0, 110, 1, -68)
tabs.Position = UDim2.new(0, 8, 0, 60)
tabs.BackgroundColor3 = Color3.fromRGB(20,20,25)
tabs.BorderSizePixel = 0
Instance.new("UICorner", tabs).CornerRadius = UDim.new(0,10)

local content = Instance.new("Frame", main)
content.Size = UDim2.new(1, -134, 1, -68)
content.Position = UDim2.new(0, 126, 0, 60)
content.BackgroundTransparency = 1

local function makeTab(name, order)
	local b = Instance.new("TextButton", tabs)
	b.Size = UDim2.new(1, -12, 0, 36)
	b.Position = UDim2.new(0, 6, 0, 6 + (order-1)*42)
	b.Text = name
	b.Font = Enum.Font.Gotham
	b.TextSize = 14
	b.TextColor3 = Color3.fromRGB(220,220,220)
	b.BackgroundColor3 = Color3.fromRGB(35,35,45)
	b.BorderSizePixel = 0
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,8)
	return b
end

local function makePanel()
	local p = Instance.new("Frame", content)
	p.Size = UDim2.fromScale(1,1)
	p.BackgroundTransparency = 1
	p.Visible = false
	return p
end

local tabA = makeTab("Main", 1)
local tabB = makeTab("Visual", 2)
local tabC = makeTab("Settings", 3)

local panelA = makePanel()
local panelB = makePanel()
local panelC = makePanel()
panelA.Visible = true

local function switch(panel)
	for _,p in ipairs(content:GetChildren()) do
		if p:IsA("Frame") then p.Visible = false end
	end
	panel.Visible = true
end

tabA.MouseButton1Click:Connect(function() switch(panelA) end)
tabB.MouseButton1Click:Connect(function() switch(panelB) end)
tabC.MouseButton1Click:Connect(function() switch(panelC) end)

-- Components
local function toggle(parent, text, y)
	local f = Instance.new("Frame", parent)
	f.Size = UDim2.new(1, -12, 0, 40)
	f.Position = UDim2.new(0, 6, 0, y)
	f.BackgroundColor3 = Color3.fromRGB(35,35,45)
	f.BorderSizePixel = 0
	Instance.new("UICorner", f).CornerRadius = UDim.new(0,8)

	local lbl = Instance.new("TextLabel", f)
	lbl.Size = UDim2.new(1, -60, 1, 0)
	lbl.Position = UDim2.new(0, 12, 0, 0)
	lbl.BackgroundTransparency = 1
	lbl.Text = text
	lbl.Font = Enum.Font.Gotham
	lbl.TextSize = 14
	lbl.TextXAlignment = Left
	lbl.TextColor3 = Color3.fromRGB(230,230,230)

	local btn = Instance.new("TextButton", f)
	btn.Size = UDim2.new(0, 36, 0, 22)
	btn.Position = UDim2.new(1, -48, 0.5, -11)
	btn.Text = "OFF"
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 12
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.BackgroundColor3 = Color3.fromRGB(120,40,40)
	btn.BorderSizePixel = 0
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0,11)

	local on = false
	btn.MouseButton1Click:Connect(function()
		on = not on
		btn.Text = on and "ON" or "OFF"
		btn.BackgroundColor3 = on and Color3.fromRGB(40,120,70) or Color3.fromRGB(120,40,40)
		print(text, on) -- placeholder
	end)
end

toggle(panelA, "Feature A (placeholder)", 6)
toggle(panelA, "Feature B (placeholder)", 52)
toggle(panelB, "Visual Option (placeholder)", 6)
toggle(panelC, "Setting Option (placeholder)", 6)

-- Keybind to show/hide
UIS.InputBegan:Connect(function(i,gp)
	if gp then return end
	if i.KeyCode == Enum.KeyCode.RightShift then
		main.Visible = not main.Visible
	end
end)
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Create Minimize Button
local minimizeButton = Instance.new("TextButton")
minimizeButton.Parent = topBar
minimizeButton.Size = UDim2.new(0, 50, 1, 0)
minimizeButton.Position = UDim2.new(1, -120, 0, 0)
minimizeButton.Text = "_"
minimizeButton.BackgroundColor3 = Color3.fromRGB(255, 255, 50)
minimizeButton.TextColor3 = Color3.fromRGB(0, 0, 0)

local isMinimized = false
minimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    if isMinimized then
        mainFrame.Size = UDim2.new(mainFrame.Size.X.Scale, mainFrame.Size.X.Offset, 0, 30)
    else
        mainFrame.Size = UDim2.new(mainFrame.Size.X.Scale, mainFrame.Size.X.Offset, 0, 200)
    end
end)

-- Add Title
local title = Instance.new("TextLabel")
title.Parent = topBar
title.Size = UDim2.new(1, -120, 1, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Roblox Hub"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1

-- Add some content in the mainFrame for demonstration
local contentLabel = Instance.new("TextLabel")
contentLabel.Parent = mainFrame
contentLabel.Size = UDim2.new(1, 0, 1, -30)
contentLabel.Position = UDim2.new(0, 0, 0, 30)
contentLabel.Text = "Hello, this is your Roblox Hub!"
contentLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
contentLabel.BackgroundTransparency = 1
