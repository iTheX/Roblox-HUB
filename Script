local UserInputService = game:GetService("UserInputService")
local Player = game.Players.LocalPlayer

-- ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DraggableTopBarGui"
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

-- Topbar Frame
local TopBar = Instance.new("Frame")
TopBar.Parent = ScreenGui
TopBar.Size = UDim2.new(0, 400, 0, 40)
TopBar.Position = UDim2.new(0.5, -200, 0.1, 0)
TopBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
TopBar.BorderSizePixel = 0

-- Judul
local Title = Instance.new("TextLabel")
Title.Parent = TopBar
Title.Size = UDim2.new(1, -50, 1, 0)
Title.Position = UDim2.new(0, 10, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "Draggable TopBar GUI"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Tombol Close
local Close = Instance.new("TextButton")
Close.Parent = TopBar
Close.Size = UDim2.new(0, 40, 1, 0)
Close.Position = UDim2.new(1, -40, 0, 0)
Close.Text = "X"
Close.Font = Enum.Font.GothamBold
Close.TextSize = 16
Close.TextColor3 = Color3.new(1,1,1)
Close.BackgroundColor3 = Color3.fromRGB(180, 50, 50)
Close.BorderSizePixel = 0

Close.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

-- Tombol SC1
local SC1 = Instance.new("TextButton")
SC1.Parent = TopBar
SC1.Size = UDim2.new(0, 60, 0, 26)
SC1.Position = UDim2.new(1, -150, 0.5, -13)
SC1.Text = "SC1: OFF"
SC1.Font = Enum.Font.GothamBold
SC1.TextSize = 12
SC1.TextColor3 = Color3.new(1,1,1)
SC1.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
SC1.BorderSizePixel = 0

-- Tombol SC2
local SC2 = Instance.new("TextButton")
SC2.Parent = TopBar
SC2.Size = UDim2.new(0, 60, 0, 26)
SC2.Position = UDim2.new(1, -85, 0.5, -13)
SC2.Text = "SC2: OFF"
SC2.Font = Enum.Font.GothamBold
SC2.TextSize = 12
SC2.TextColor3 = Color3.new(1,1,1)
SC2.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
SC2.BorderSizePixel = 0

-- === DRAG SYSTEM ===
local dragging = false
local dragStart
local startPos

local function update(input)
	local delta = input.Position - dragStart
	TopBar.Position = UDim2.new(
		startPos.X.Scale,
		startPos.X.Offset + delta.X,
		startPos.Y.Scale,
		startPos.Y.Offset + delta.Y
	)
end

TopBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 
	or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = TopBar.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

TopBar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement 
	or input.UserInputType == Enum.UserInputType.Touch then
		if dragging then
			update(input)
		end
	end
end)

local sc1On = false
local sc2On = false

SC1.MouseButton1Click:Connect(function()
	sc1On = not sc1On
	if sc1On then
		SC1.Text = "SC1: ON"
		SC1.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
		-- AKSI SC1 ON DI SINI
	else
		SC1.Text = "SC1: OFF"
		SC1.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
		-- AKSI SC1 OFF DI SINI
	end
end)

SC2.MouseButton1Click:Connect(function()
	sc2On = not sc2On
	if sc2On then
		SC2.Text = "SC2: ON"
		SC2.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
		-- AKSI SC2 ON DI SINI
	else
		SC2.Text = "SC2: OFF"
		SC2.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
		-- AKSI SC2 OFF DI SINI
	end
end)

